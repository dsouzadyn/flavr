<h1 style="text-align:center;">Log In</h1>
<%= form_tag sessions_path, :class => 'login-form' do %>
  <p>
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
  </p>
  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </p>
  <p>
    <%= submit_tag "Log In" %>
  </p>
  <p style="text-align:center;"><%= link_to 'Sign Up', signup_path %></p>
<% end %>
