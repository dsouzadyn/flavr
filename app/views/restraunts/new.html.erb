<% if logged_in? %>
  <%= link_to 'Logout', logout_path %>
<% end %>
<h1>Add a new restraunt</h1>
<%= form_for :restraunt, url: restraunts_path do |f| %>
<p>
  <%= f.label :title %>
  <%= f.text_field :title %>
</p>
<p>
  <%= f.label :cuisine %>
  <%= f.select :cuisine_id, options_for_select(Cuisine.all.map{|c|[c.cname, c.id]}) %>
</p>
<p>
  <%= f.label :phone %>
  <%= f.telephone_field :phone %>
</p>
<p>
  <%= f.label :address %>
  <%= f.text_area :address %>
</p>
<p>
  <%= f.label :cost %>
  <%= f.number_field :cost %>
</p>
<p>
  <%= f.label :heads %>
  <%= f.number_field :heads %>
</p>
<p>
  <%= f.label :image_url %>
  <%= f.text_field :image_url %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>
