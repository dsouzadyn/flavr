<%= render 'layouts/navbar' %>
<% @restraunts.each do |restraunt| %>
  <div class="restraunt">
    <div class="rest-img">
      <%= image_tag restraunt.image_url %>
      <h3 class="rest-name"> <%= restraunt.title %> </h3>
      <h4 class="rest-type"> <%= restraunt.cuisine.cname %></h4>
      <h4 class="rest-rating"> 0.0 </h4>
    </div>
    <div class="rest-content">
      <div>
        <p><span class="rest-d">Cuisine:</span><%= restraunt.cuisine.cname %></p>
        <p><span class="rest-d">For <%= restraunt.heads %> people:</span>&#8377;<%= restraunt.cost %></p>
      </div>

      <%= link_to 'View Restraunt', restraunt_path(restraunt), :class=>"button" %>
      <a href="tel:<%= restraunt.phone %>" class="button btn-white">Phone Up</a>
    </div>
  </div>
<% end %>
